<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_article_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999"
                    android:drawableLeft="@drawable/ic_vector_photo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_article_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_999"
                    android:textSize="12sp" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/tv_article_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_article_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_type"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="1dp"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingBottom="1dp"
                    android:text="svg"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <!--<ImageView-->
                    <!--android:id="@+id/iv_article_collection"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/ic_vector_collection"/>-->
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>