<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"/>



        <com.liuxe.banner.Banner
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:bannerLeftMargin="@dimen/dp_10"
            app:bannerRightMargin="@dimen/dp_10"
            app:bannerRadius="6dp"
            app:isAutoPlay="true"
            app:isShowIndicator="true"
            app:bannerMargin="@dimen/dp_10"
            app:playDuration="5000"
            app:scrollDuration="1200">

        </com.liuxe.banner.Banner>

</FrameLayout>
