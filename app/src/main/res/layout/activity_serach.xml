<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.common.SerachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:src="@mipmap/ic_arrow_back_white" />


        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_dialog_bg"
            android:hint="输入关键字进行搜索"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="4dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="?android:attr/textColorSecondary"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="4dp"
            android:src="@drawable/ic_vector_search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">
        <com.yunxiaosheng.baselib.widgets.VRecylerView
            android:id="@+id/v_recylerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.yunxiaosheng.baselib.widgets.VRecylerView>

    </FrameLayout>


</LinearLayout>